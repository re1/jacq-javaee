<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="jacq-service">
        <jta-data-source>java:/jacqDS</jta-data-source>

        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jar-file>../WEB-INF/lib/jacq-common-0.9.0.jar</jar-file>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.use_sql_comments" value="false" />
            <property name="hibernate.hbm2ddl.auto" value="" />
            <property name="hibernate.connection.autocommit" value="true" />
            <property name="hibernate.connection.zeroDateTimeBehavior" value="convertToNull" />
        </properties>
    </persistence-unit>
    <persistence-unit name="openup">
        <class>org.jacq.common.model.jpa.openup.TblCommonNamesCache</class>
        <class>org.jacq.common.model.jpa.openup.TblScientificNameCache</class>
        <class>org.jacq.common.model.jpa.openup.TblService</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceAllearterDk</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceAzerbaijan</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceCzechJiriBezo1</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceCzechJiriRoztoci</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceCzechJiriVacnatci</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceCzechPrague</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceEtiDatabases</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceHungarianPeregovits</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceHungarianPeregovitsLiterature</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceLinnaeusProjects</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceNewZealandLandcare</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceRussianPlantarium</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceSlovakBratislava</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceTogodbJapanese</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceUkrainianKobiv</class>
        <class>org.jacq.common.model.jpa.openup.TblWebserviceCache</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceHebrewLinda</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceUkrainianKobivReferences</class>
        <class>org.jacq.common.model.jpa.openup.TblSourceUkrainianKobivRegions</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
